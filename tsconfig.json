{
  "compilerOptions": {
    "lib": ["ES2023"],
    "target": "es2023",
    "module": "nodenext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@routers/*": ["routers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
